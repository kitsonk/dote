@import "nib"

topic-border-color = #c0c6cc
topic-bg-color = #e4ebf2
status-color = #e0f0ff

.doteTopicAdd
  background-color topic-bg-color
  background-image linear-gradient(top, lighten(topic-bg-color, 80%), topic-bg-color 300px)
  border 1px solid topic-border-color
  margin 0 auto
  padding 1em
  width 924px
  &Title
    font-size 26px
    width 99.5%
    margin 0 0 0.5em 0
  &Status
    background linear-gradient(top,status-color,lighten(status-color, 75%))
    background-color status-color
    border 1px solid darken(status-color, 50%)
    border-radius 4px
    box-shadow 0 1px 2px rgba(black,0.5), inset 0 0 1px rgba(white,0.5)
    float right
    padding 0.5em
    text-align center
    width 200px
  &Poster
    padding-bottom 6px
  &Tags
    width 675px
    &Container
      font-size 14px
  &DescriptionLabel
    font-size 18px
    margin-bottom 0.25em
  &HeightContainer
    clear both
  &ButtonPanel
    font-size 12px
    padding 0.5em 0.5em 0
  .dijitTabContainer
    font-size 12px
  .dijitTextArea
  code
  pre
    font-size 12px
    font-family "Consolas","Bitstream Vera Sans Mono","Courier New",Courier,monospace;
  pre code
    border none
    background-color none
  pre
    padding 0.25em
  blockquote
    font-size 12px
    margin 0
    padding 0 1em
    border-top none
    border-bottom none
    border-left 2px solid topic-border-color