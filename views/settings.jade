extends main

prepend head
  title = "dote User Settings"

block scripts
  script(type="text/javascript")
    dojoConfig = {
      async: 1,
      isDebug: 0,
      baseUrl: "/#{base}",
      packages: [{
        name: "dojo",
        location: "dojo"
      },{
        name: "dijit",
        location: "dijit"
      },{
        name: "moment",
        location: "moment"
      },{
        name: "marked",
        location: "marked/lib"
      },{
        name: "hljs",
        location: "hljs"
      },{
        name: "dote-client",
        location: "dote-client"
      }],
      deps: ["dote-client/viewSettings"]
    };
    dote = {
      username: "#{username}"
    };
  script(type="text/javascript", src="/#{base}/dojo/dojo.js")

block content
  .header
    .content
      .controls
        ul
          li #{username}
          li
            a(id="topicList", href="/")
              i(class="icon-reorder")
              | list
          li 
            a(id="newTopic", href="/add")
              i(class="icon-comment-alt")
              | new
          li
            a(id="help", href="/help")
              i(class="icon-question-sign")
              | help
          li
            a(id="logout", href="/logout")
              i(class="icon-signout")
              | logout
      .title dote
      .subtitle Dojo Topic Discussion
      .clear
  .main
    h1 User Settings
    form(action="")
      button(type="submit") Save

  .footer
    .content Copyright &copy; 2012 Dojo Foundation &mdash; All Rights Reserved