extends main

prepend head
  title = "dote Comment Mockup"

block scripts
  script(type="text/javascript")
    dojoConfig = {
      async: 1,
      isDebug: 1,
      baseUrl: "/src",
      packages: [{
        name: "dojo",
        location: "dojo"
      },{
        name: "dijit",
        location: "dijit"
      },{
        name: "moment",
        location: "moment"
      },{
        name: "dote-client",
        location: "dote-client"
      }]
    };
  script(type="text/javascript", src="/src/dojo/dojo.js")
  script(type="text/javascript")
    require(["dojo/ready", "dote-client/Topic"], function(ready, Topic){
      ready(function(){
        var topic = new Topic({
          id: "topic"
        }, "topic");
        topic.startup();
        console.log(topic);
      });
    });

prepend css
  link(rel="stylesheet", type="text/css", href="/_static/css/comment.css", media="all")

block content
  h1 Dote Test Comments
  #topic