extends main

prepend head
  title = "dote Comment Mockup"

block scripts
  script(type="text/javascript")
    dojoConfig = {
      async: 1,
      isDebug: 0,
      baseUrl: "/src",
      packages: [{
        name: "dojo",
        location: "dojo"
      },{
        name: "dijit",
        location: "dijit"
      },{
        name: "moment",
        location: "moment"
      },{
        name: "marked",
        location: "marked/lib"
      },{
        name: "hljs",
        location: "hljs"
      },{
        name: "dote-client",
        location: "dote-client"
      }],
      deps: ["dote-client/comments"]
    };
  script(type="text/javascript", src="/src/dojo/dojo.js")

prepend css
  link(rel="stylesheet", type="text/css", href="/_static/css/comment.css", media="all")
  link(rel="stylesheet", type="text/css", href="/src/hljs/default.css", media="all")

block content
  h1 Dote Test Comments
  #topic