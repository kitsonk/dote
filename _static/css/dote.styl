@import url("../../lib/dote-client/resources/client.css")
@import url("../Font-Awesome/css/font-awesome.css")
@import "nib"

login-border-color = #b5bcc7
login-bg-color = #e4ebf2
warning-border-color = #c70000
warning-bg-color = #f2e4e4
warning-color = #c70000
header-bg-color = #e6e6e6
header-border-color = #b5bcc7
footer-bg-color = #e6e6e6
footer-border-color = #b5bcc7
header-button-border-color = #8b9199
header-button-bg-color = #fcfcfc
header-button-bg-color-hover = #f2f2f2

.loginbox
  margin 6em auto
  width 360px
  padding 1em
  border 1px solid login-border-color
  border-radius 3px
  background-color login-bg-color
  background-image linear-gradient(top, rgba(white, 0.8), rgba(white, 0) 100px)
  box-shadow 0 0 1px rgba(black, 0.75)
  h1
  h2
    text-align center
  h1
    font-size 24px
    margin-bottom 6px
  h2
    font-size 18px
    margin-top 6px
    margin-bottom 24px
  table
    margin 0 auto
  th
    text-align right
    padding-right 0.5em
  table tr:last-child
    text-align center
  > p
    text-align center
  .warning
    background-color warning-bg-color
    background-image linear-gradient(top, rgba(white, 0.8), rgba(white, 0))
    border 2px solid warning-border-color
    border-radius 1px
    box-shadow 0 0 1px rgba(black, 0.5)
    color warning-color
    display none
    font-size 12px
    margin 0 1em 1em
    padding 0.5em
    text-align center

.header
  border-bottom 1px solid header-border-color
  background-color header-bg-color
  background-image linear-gradient(top, rgba(white, 0.8), rgba(white, 0))
  padding 0.5em 0
  box-shadow 0 1px 0 rgba(white, 0.4), 0 0 10px rgba(black, 0.1)
  .content
    width 926px
    margin 0 auto
    .title
      font-size 28px
    .subtitle
      font-size 14px
      margin-bottom 0.5em
    .controls
      float right
      font-size 12px
      margin-top 0.75em
      ul
        margin 0
        padding 0
        display inline
        > li
          list-style-type none
          display inline
          &:first-child
            padding-right .5em
          a
            text-decoration none
            color black
            padding 6px
            border 1px solid header-button-border-color
            border-radius 2px
            background-color header-button-bg-color
            box-shadow 0 1px 1px rgba(black, 0.15)
            transition-duration 0.2s
            &:hover
              background-color header-button-bg-color-hover
              transition-duration 0.2s

.main
  width 926px
  margin 0 auto
  padding 1em 0
  h1
    font-size 24px
    text-shadow 0 1px 2px rgba(black, 0.15)

.instructions
  margin 1em
  padding 1em
  border 1px solid #ddd
  background-color #f9f9f9
  border-radius 3px
  box-shadow 0 1px 1px rgba(black, 0.25)
  p
    font-size 14px
    code
      font-size 100%
      padding 3px 3px 0
      font-family "Consolas","Bitstream Vera Sans Mono","Courier New",Courier,monospace
    .action
      padding 3px 6px
      font-size 85%
      border 1px solid header-button-border-color
      border-radius 2px
      background-color header-button-bg-color
      box-shadow 0 1px 1px rgba(black, 0.15)
  .next
    float right

.hide
  display none

#filterPane .dijitTitlePaneContentInner
  padding 5px 0 1px 0

.filterItem
  padding 10px
  background-color #f9f9f9
  border-right 1px solid login-border-color

.settings
  font-size 14px
  display none
  th
    text-align right
    vertical-align top
    padding 6px 1em 6px 0

.footer
  margin-top 2em
  border-top 1px solid footer-border-color
  background-color footer-bg-color
  background-image linear-gradient(top, rgba(white, 0.8), rgba(white, 0))
  box-shadow 0 1px 0 rgba(white, 0.4), 0 0 10px rgba(black, 0.1)
  .content
    padding 1em
    width 926px
    margin 0 auto

.clear
  clear both
