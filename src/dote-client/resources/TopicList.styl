@import url("_TopicListItem.css")
@import "nib"

.doteTopicList
  &Container
    border-top 1px solid #c0c6cc
    margin 0 auto
    width 926px
  &Hide
    display none
  &More 
    margin 0.25em
    padding 0.5em
    &Link
      display block
      background-color #ddd
      background-image linear-gradient(white 0px, rgba(white, 0) 3px, rgba(white, 0.5) 100%)
      box-shadow 0 1px 2px rgba(black,0.5), inset 0 0 1px rgba(white,0.5)
      border-radius 2px
      font-size 175%
      border 1px solid #999
      text-align center
      padding 0.5em
      color black
      text-shadow 0 1px 1px rgba(white,0.75)
      text-decoration none
      transition-duration 0.2s
      &Hover
        background-color #ccc
        transition-duration 0.3s
