@import url("_TopicComment.css")
@import "nib" 

topic-border-color = #c0c6cc
topic-bg-color = #e4ebf2
empty-bar-color = #eee
plus-bar-color = #4be639
neutral-bar-color = #e6cf39
minus-bar-color = #e63939
button-color = #bcd8f4
button-hover-color = #86bdf2
status-active-color = #e0f0ff
status-inactive-color = #eee
tag-color = #ddd
plus-color = #bcf4c3
minus-color = #f4bcbc
neutral-color = #f4e0bc
star-inactive-color = #ccc
star-active-color = #7e90a3
tr-bg-color = #eee
tr-desc-bg-color = #fff

.doteTopic
  background-color topic-bg-color
  background-image linear-gradient(top, lighten(topic-bg-color, 80%), topic-bg-color 300px)
  border 1px solid topic-border-color
  display none
  margin 0 auto
  padding 0.5em
  width 924px
  &Vote
    &Container
      float left
      width 150px
    &Inner
      padding 0.5em
    &Buttons
      width 100%
    &Up
    &Neutral
    &Down
      background-color button-color
      background-image linear-gradient(white 0px, rgba(white, 0) 3px, rgba(white, 0.5) 100%)
      border 1px solid darken(button-color, 40%)
      border-radius 2px
      box-shadow 0 1px 2px rgba(black,0.5), inset 0 0 1px rgba(white,0.5)
      color #050505
      display inline-block
      font-size 11px
      margin 6px 0 0 0
      padding 3px 0 2px
      text-align center
      text-decoration none
      text-shadow 0 1px 1px rgba(white,0.75)
      transition-duration 0.3s
      width 41px
      > span
        display none
      &Hover
        background-color button-hover-color
        background-image linear-gradient(white 0px, rgba(white, 0) 3px, rgba(white, 0.5) 100%)
        transition-duration 0.2s
      &Active
        background none
        background-color button-color
        box-shadow 0 0 1px rgba(black,0.75)
        transition-duration 0.2s
    &Selected
      background none
      background-color button-color
      box-shadow 0 0 1px rgba(black,0.75)
  &Votes
    font-size 48px
    text-align center
  &Spark
    border 1px solid #555
    border-radius 2px
    box-shadow 0 1px 2px rgba(black,0.5), inset 0 0 1px rgba(white, 0.5)
    table
      background linear-gradient(bottom, darken(empty-bar-color, 30%), empty-bar-color 60%)
      border-collapse collapse
      width 100%
      tr
        height 12px
    &Plus
    &Neutral
    &Minus
      background-image linear-gradient(rgba(white, 0.93) 0px, rgba(white, 0.41) 1px, rgba(white, 0.7) 2px, rgba(white, 0) 100%)
    &Plus
      background-color plus-bar-color
    &Neutral
      background-color neutral-bar-color
    &Minus
      background-color minus-bar-color
  &VoteButtons
  &TagsContainer
  &VotersContainer
    ul
      margin 0
      padding 0
      display inline
      > li
        list-style-type none
        display inline
  &Content
    &Container
      float right
      width 770px
    &Inner
      padding 1em
  &Title
    font-size 26px
    padding 0.25em
    margin-right 32px
    text-shadow 0 1px 2px rgba(black, 0.15)
  &Status
    width 130px
    float right
    text-align center
    border-radius 4px
    box-shadow 0 1px 2px rgba(black,0.5), inset 0 0 1px rgba(white,0.5)
    padding 0.5em
    &
      border 1px solid darken(status-inactive-color, 50%)
      background linear-gradient(top,status-inactive-color,lighten(status-inactive-color, 75%))
      background-color status-inactive-color
    &Active
      border 1px solid darken(status-active-color, 50%)
      background linear-gradient(top,status-active-color,lighten(status-active-color, 75%))
      background-color status-active-color
  &Action
    font-size 18px
    padding 0.2em
    text-shadow 0 1px 1px rgba(black, 0.15)
    text-transform capitalize
  &Owner
    font-size 12px
    font-weight bold
    line-height 2em
  &CommentCount
    font-size 14px
    line-height 2em
  &Description
    padding 1em
    font-size 14px
  &Tags
  &Voters
    &Container
      font-size 12px
      line-height 2em
      margin 6px 0
      i
        padding 3px
      ul > li
        border-radius 2px
        box-shadow 0 1px 1px rgba(black, 0.15)
        color #050505
        margin 0 0.5em 0 0
        padding 1px 6px
        text-shadow 0 1px 1px rgba(white, 0.75)
  &TagsContainer
    ul > li
      background linear-gradient(top,white 0px,tag-color 3px,lighten(tag-color, 20%) 100%)
      background-color tag-color
      border 1px solid darken(tag-color, 40%)
    .a11yLabel
      display none
    a
      text-decoration none
      color #050505
      text-shadow 0 1px 1px rgba(white, 0.75)
      &:hover
        color #0060bf
  &Voter
    &Plus
    &Minus
    &Neutral
      i
        color #555
        padding 0
    &Plus
      background linear-gradient(top,white 0px,plus-color 3px,lighten(plus-color, 20%) 100%)
      background-color plus-color
      border 1px solid darken(plus-color, 40%)
    &Minus
      background linear-gradient(top,white 0px,minus-color 3px,lighten(minus-color, 20%) 100%)
      background-color minus-color
      border 1px solid darken(minus-color, 40%)
    &Neutral
      background linear-gradient(top,white 0px,neutral-color 3px,lighten(neutral-color, 20%) 100%)
      background-color neutral-color
      border 1px solid darken(neutral-color, 40%)
  &Watch
    float right
    padding 0 8px 0
    a
      font-size 20px
      text-decoration none
      transition-duration 0.3s
      &:hover
        text-shadow 0 2px 2px rgba(black, 0.5)
        transition-duration 0.2s
      .icon-star-empty
        color star-inactive-color
      .icon-star
        color star-active-color
  &Hide
    display none
  &Previous
    margin 1em 1em 0 1em
    border-top 1px solid topic-border-color
    border-left 1px solid topic-border-color
    border-right 1px solid topic-border-color
    &Button
      background-color #eee
      border none
      margin 0
      color black
      cursor pointer
      display block
      font-size 16px
      padding 0.4em
      text-align center
      text-decoration none
      text-shadow 0 1px 1px rgba(white,0.75)
      transition-duration 0.2s
      width 100%
      &Hover
        background-color #ccc
        transition-duration 0.3s
      &:disabled
        cursor progress
        color #999
        background-color #ccc
        background-image none
        box-shadow none
        transition-duration 0.2s
  &Comments
    margin 0 1em 1em 1em
    border 1px solid topic-border-color
  &HeightContainer
    clear both
    font-size 1px
  &Post
    margin 1em
  &Submit
    font-size 12px
    padding 0.25em
  &LoadingIcon
    background url("../../dijit/themes/claro/images/loadingAnimation.gif") no-repeat
    height 20px
    width 20px
    margin-top -6px
    padding-right 0.25em
  .dijitTabContainer
    font-size 12px
  .dijitTextArea
  code
  pre
    font-size 12px
    font-family "Consolas","Bitstream Vera Sans Mono","Courier New",Courier,monospace;
  pre code
    border none
    background-color none
  pre
    padding 0.25em
  blockquote
    font-size 12px
    margin 0
    padding 0 1em
    border-top none
    border-bottom none
    border-left 2px solid topic-border-color
  &Description
  &Comment
  &Post
    table
      border-collapse collapse
      th
        border-bottom 1px solid topic-border-color
        font-weight bold
        padding 3px
      td
        padding 3px
  &Comment
  &Post
    table
      th
        background-color tr-bg-color
      tr:nth-child(even) td
        background-color tr-bg-color
  &Description
    table
      th
        background-color tr-desc-bg-color
      tr:nth-child(even) td
        background-color tr-desc-bg-color
