@import "nib"

.dote_
  &h
  &f
    padding 1em
    background-color #efefef
    font-size 95%
  &h
    border-bottom 2px solid #ccc
    line-height 1.4em
    table
      margin 0 auto 0
      border-collapse collapse
      text-align center
      tr:first-child
        td
          border 2px solid #ccc
          font-size 250%
          padding 0.25em
          line-height 0.8em
          text-shadow 1px 1px 2px rgba(black, 0.3)
        td.plus
          background-color #bcf4c3
        td.neutral
          background-color #f4e0bc
        td.minus
          background-color #f4bcbc
      tr:last-child td:first-child
        font-weight bold
  &f
    border-top 2px solid #ccc
    hr
      display none
  &l
    font-weight bold
  &t
  &u
  &d
  &n
    border 1px solid #ccc
    background-image linear-gradient(white 0px, rgba(white, 0) 3px, rgba(white, 0.5) 100%)
    box-shadow 0 1px 1px rgba(black, 0.15)
    text-shadow 0 1px 1px rgba(white, 0.75)
    border-radius 2px
    padding 0 3px 0
  &t
    background-color #ddd
  &u
    background-color #bcf4c3
  &d
    background-color #f4bcbc
  &n
    background-color #f4e0bc
  &c
    border-top 1px solid #ccc
  &a
    background-color #efefef
    padding 0.3em
  &b
    border-left 2px solid #ccc
    margin-left 1em
    padding-left 1em
  &vu
  &vn
  &vd
    border 1px solid #ccc
    border-radius 3px
    text-decoration none
    color black
    padding 3px
    box-shadow 0 1px 1px rgba(black, 0.15)
    background-color #f9f9f9

